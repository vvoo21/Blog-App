<section class="user-section">
  <div class="post">
    <div class='user-wraps'>
      <div class="flex">
        <h3 class="secundary-text">Post #<%= @post.id %> <%= @post.title %></h3>
        <span class="text">Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></span>
      </div>
      <p class="text"><%= @post.text %></p>
      <div class="new-like">
        <%= render partial: "like", locals: { like: Like.new, post_id: @post.id, user_id: @post.author.id } %>
      </div>
    </div>
    <div class="post-comments"> 
      <p class="text pink">Comments:</p>
      <% if @post.comments.empty? %>
        <p class="text">There are no comments</p>
      <% else %>
        <% @post.comments.each do |comment| %>
          <p class="text">
            <%= comment.author.name %>: <span class="brown"> <%= comment.text %> </span>
          </p>
        <% end %>
      <% end %>
    </div>
    <%= link_to "Add a comment", new_user_post_comment_path(user_id: @post.author.id, post_id: @post.id), class: "btn secundary-text" %>
  </div>
</section>